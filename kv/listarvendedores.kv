#:kivy 2.2.1

<ListarVendedoresPage>:
    on_pre_enter: app.exibir_equipe()
    on_leave: app.resetar_texto_equipe()
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/8498634-ai.png"
        
        BoxLayout:
            orientation: 'horizontal'
            spacing: 15 
            size_hint: 0.8, 0.1
            pos_hint: {'right': 0.9, 'top': 0.95} 
            TextInput:
                size_hint_x: 0.7 
                size_hint_y: 0.7  
                id: codigo_vendedor_input
                hint_text: 'DIGITE O CÃ“DIGO DO OUTRO VENDEDOR'
            LabelButton:
                canvas.before:
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source: 'icones/fundo_botao.png'
                        
                font_name: 'fontes/Dortmund-ExtraBold.otf'
                text: 'ADICIONAR'
                pos_hint: {"right": 0.75, "top": 0.85}
                size_hint: 0.3, 0.8
                on_release: app.adicionar_vendedor(codigo_vendedor_input.text)
                
        Label:
            id: label_status
            text: ''
            font_name: 'fontes/Dortmund-ExtraBold.otf'
            pos_hint: {"right": 0.65, "top": 0.88}
            size_hint: 0.3, 0.1
                
        ScrollView:
            pos_hint: {'right': 0.9, 'top': 0.8}
            size_hint: 0.8, 0.63
            id: scroll_view_equipe
            GridLayout:
                cols: 1
                id: lista_vendedores
                size_hint_y: None
                spacing: 2, 20
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True
                
        GridLayout:
            rows: 1
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.06
            ImageButton:
                source: "icones/listadevendas.png"
                on_release: app.mudar_tela('home_page')
            ImageButton:
                source: 'icones/todasvendas.png'
                on_release: app.mudar_tela('listar_todas_vendas_page')
            ImageButton:
                source: "icones/adicionar_produto.png"
                on_release: app.mudar_tela("adicionar_vendas_page")
            ImageButton:
                source: "icones/equipe.png"
                on_release: app.mudar_tela("listar_vendedores_page")
            ImageButton:
                source: "icones/settings.png"
                on_release: app.mudar_tela("ajustes_page")
